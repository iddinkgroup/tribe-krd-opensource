<assembly>
	<id>install</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/scripts</directory>
			<outputDirectory></outputDirectory>
			<filtered>false</filtered>
			<includes>
				<include>install.bat</include>
				<include>install.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/scripts</directory>
			<outputDirectory>install/scripts</outputDirectory>
			<filtered>false</filtered>
			<includes>
				<include>update.bat</include>
				<include>update.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/libs</directory>
			<outputDirectory>install/lib</outputDirectory>
			<filtered>false</filtered>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<!-- tijdelijk uit totdat de doc generatie het weer doet
		<fileSet>
			<directory>src/doc</directory>
